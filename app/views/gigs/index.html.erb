<p id="notice"><%= notice %></p>

  <!-- hero section -->
  <div id="hero-about">
    <div class="hero-content">
      <h1>Upcoming Shows</h1>
    </div>
  </div>
  <!-- hero section end -->


<div id="show-works">
  <div class="container">
  <% @gigs.each_slice(3) do |gigs| %>
    <div class="row">
    <% gigs.each do |gig| %>
      <div class="col-md-4" style="padding-bottom: 10%;">
        <%= image_tag gig.image.url %>
        <p><%= gig.title %> <br> <%= gig.venue %> <br> <%= gig.date %></p>

        <% if user_signed_in? %>
        <%= link_to 'Show', gig %> <br>
        <%= link_to 'Edit', edit_gig_path(gig) %> <br>
        <%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div> 
    <% end %>
    </div>
    <% end %>
    <% if user_signed_in? %>
    <%= link_to 'New Gig', new_gig_path %>
    <%end%>
  </div>
</div>


